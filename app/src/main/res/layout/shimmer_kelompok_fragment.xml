<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_punya_kelompok"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shimmer_cv_value_kelompok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPadding="16dp"
        app:strokeColor="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shimmer_tv_title_kelompok"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_gray"
                android:ellipsize="end"
                android:fontFamily="@font/poppinssemibold"
                android:maxLines="1"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/shimmer_linear_layout_value_kelompok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmer_tv_title_kelompok">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_gray"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="12sp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@color/shimmer_gray"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/shimmer_tv_title_nomor_kelompok"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_gray"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="12sp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/shimmer_tv_value_nomor_kelompok"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@color/shimmer_gray"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shimmer_tv_title_topik"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_gray"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shimmer_tv_value_topik"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@color/shimmer_gray"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsmedium"
                        android:maxLines="1"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_kelompok">

                    <TextView
                        android:id="@+id/shimmer_tv_title_judul"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_gray"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shimmer_tv_value__judul"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:ellipsize="end"
                        android:layout_marginStart="8dp"
                        android:background="@color/shimmer_gray"
                        android:maxLines="2"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/shimmer_btn_selengkapnya_kelompok"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/shimmer_gray"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmer_linear_layout_value_kelompok"
                tools:ignore="TextContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shimmer_cv_value_dosbing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPadding="16dp"
        app:strokeColor="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shimmer_tv_title_dosbing"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppinssemibold"
                android:maxLines="1"
                android:background="@color/shimmer_gray"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/shimmer_linear_layout_value_dosbing"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/shimmer_gray"
                app:layout_constraintTop_toBottomOf="@id/shimmer_tv_title_dosbing">

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>