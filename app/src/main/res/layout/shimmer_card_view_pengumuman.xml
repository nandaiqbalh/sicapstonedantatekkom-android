<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shimmer_iv_item_pengumuman"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/rounded_outline"
            android:clipToOutline="true"
            android:contentDescription="@string/item_pengumuman"
            android:backgroundTint="@color/shimmer_gray"
            tools:targetApi="s" />

        <LinearLayout
            android:id="@+id/shimmer_linear_layout_pengumuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shimmer_tv_item_pengumuman_title"
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@color/shimmer_gray"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsmedium"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:textColor="@color/RoyalBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shimmer_tv_item_pengumuman_content"
                android:layout_width="220dp"
                android:layout_height="32dp"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsregular"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:background="@color/shimmer_gray"
                android:textColor="@color/SlateGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shimmer_tv_item_pengumuman_postdata"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:background="@color/shimmer_gray"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/SlateGrey"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/garis_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_gray" />
</LinearLayout>