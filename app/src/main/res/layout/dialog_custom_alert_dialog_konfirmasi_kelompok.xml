<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="40dp"
    android:backgroundTint="@color/White"
    android:padding="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="@string/alert_title"
            android:textColor="@color/BlackPearl"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_profilephoto" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_gravity="center_horizontal"
           android:gravity="center_horizontal"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/iv_profilephoto"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_alert_message"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppinsregular"
               android:text="@string/tv_alert_message"
               android:textColor="@color/BlueFontFilled"
               android:textSize="12sp"
               android:textAlignment="center"
                />
           <TextView
               android:id="@+id/tv_alert_pengusul"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="3dp"
               android:layout_gravity="center_horizontal"
               android:fontFamily="@font/poppinsbold"
               android:text="@string/tv_alert_message"
               android:textColor="@color/BlueFontFilled"
               android:textSize="12sp"
               android:textAlignment="center"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppinsregular"
               android:text="&#63;"
               android:textColor="@color/BlueFontFilled"
               android:textSize="12sp"
               android:textAlignment="center"
               />

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button"
                android:id="@+id/btn_alert_yes"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/ya"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_data_profil_akun" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_alert_no"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/batalkan"
                android:textAllCaps="false"
                android:textColor="@color/RoyalBlue"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_data_profil_akun"
                app:strokeColor="@color/tabUnselected" />

        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>