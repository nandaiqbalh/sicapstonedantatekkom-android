<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SICapstoneDanTATekkom" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/RoyalBlue</item>
        <item name="colorPrimaryVariant">@color/RoyalBlue</item>
        <item name="colorOnPrimary">@color/RoyalBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkGrey</item>
        <item name="colorSecondaryVariant">@color/DarkGrey</item>
        <item name="colorOnSecondary">@color/DarkGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/White</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.CustomAppBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/RoyalBlue</item>
        <item name="colorPrimaryVariant">@color/RoyalBlue</item>
        <item name="colorOnPrimary">@color/RoyalBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkGrey</item>
        <item name="colorSecondaryVariant">@color/DarkGrey</item>
        <item name="colorOnSecondary">@color/DarkGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/White</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.SICapstoneDanTATekkom" parent="Base.Theme.SICapstoneDanTATekkom" />

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="bottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="checkedIconSize">32dp</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Default state -->
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>

        <!-- Color selector -->
        <item name="boxStrokeColor">@color/color_outlined_text_input_layout</item>

    </style>

    <style name="CustomTextInputLayoutWithDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Default state -->
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>

        <!-- Color selector -->
        <item name="boxStrokeColor">@color/color_outlined_text_input_layout</item>

    </style>

    <style name="TabLayoutTextAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Red</item> <!-- Ganti dengan warna teks yang Anda inginkan -->
        <item name="android:textSize">12sp</item> <!-- Ganti dengan ukuran teks yang Anda inginkan -->
    </style>
</resources>